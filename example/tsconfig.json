{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2022"],
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
